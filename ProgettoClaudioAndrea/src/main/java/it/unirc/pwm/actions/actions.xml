<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN" "https://struts.apache.org/dtds/struts-6.0.dtd">


<struts>

	<package name="actions" namespace="/actions"
		extends="struts-default">

		<action name="RegistraNuovoCliente"
			class="it.unirc.pwm.actions.RegistraNuovoCliente">
			<result name="success">/loginCliente.jsp</result>
			<result name="error">/registraNuovoCliente.jsp</result>
			<result name="input">/registraNuovoCliente.jsp</result>
		</action>

		<action name="LoginCliente"
			class="it.unirc.pwm.actions.LoginCliente">
			<result type="redirect">
				/Autenticato.action
			</result>
			<result name="success">/WEB-INF/privato/ilMioAccount.jsp</result>
			<result name="error">/loginCliente.jsp</result>
			<result name="input">/loginCliente.jsp</result>
		</action>

		<action name="VisualizzaAccount"
			class="it.unirc.pwm.actions.VisualizzaAccount">
			<result name="success">/WEB-INF/privato/ilMioAccount.jsp</result>
			<result name="error">/loginCliente.jsp</result>
		</action>

	</package>

	<package name="actionsSecure" namespace="/actions/secure"
		extends="struts-default">
		<interceptors>
			<interceptor name="autenticatoInterceptor"
				class="it.unirc.pwm.actions.privato.utils.AutenticatoInterceptor">
			</interceptor>
			<interceptor-stack name="secureStack">
				<interceptor-ref name="autenticatoInterceptor" />
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="execAndWait" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="secureStack"></default-interceptor-ref>

		<global-results>
			<result name="login" type="redirect">/loginCliente.jsp</result>
		</global-results>


	</package>


</struts>