<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

	<field name="cliente.password">
		<field-validator type="requiredstring">
			<message>La password è richiesta</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">10</param>
			<message>La password deve essere compresa tra 6 e 10 caratteri.
			</message>
		</field-validator>
	</field>
	
	<validator type="expression">
		<param name="expression">cliente.password == ripetiPassword</param>
		<message>Le password non coincidono</message>
	</validator>
	
	<field name="cliente.nome">
		<field-validator type="requiredstring">
			<message>nome è richiesto.</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">5</param>
			<param name="maxLength">8</param>
			<message>L'nome ${cliente.nome} non è valido, deve essere
				compreso tra ${minLength} e ${maxLength} caratteri. </message>
		</field-validator>
	</field>

	<field name="cliente.email">
		<field-validator type="requiredstring">
			<message>Devi inserire l'email.</message>
		</field-validator>
		<field-validator type="email">
			<message>L'email ${cliente.email} non è valida</message>
		</field-validator>
	</field>

	<validator type="expression">
		<param name="expression">cliente.nome != cliente.password</param>
		<message>nome e password devono essere differenti.</message>
	</validator>
</validators>